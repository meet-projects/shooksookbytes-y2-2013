$(document).ready(function() {
$('body').css('display', 'none');
$('body').fadeIn(2500);

$('.link').click(function() {
event.preventDefault();
newLocation = this.href;
$('body').fadeOut(1000, newpage);
});
function newpage() {
window.location = newLocation;
}
$('body').css({backgroundImage : 'url(http://www.flagstaffbusinessnews.com/wp-content/uploads/2012/10/Picture-Canyon-.jpg'});
});
